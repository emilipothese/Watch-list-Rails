<div class="container">
  <h1><%= @list.name %></h1>

  <button type="button" class="btn btn-success"><%= link_to 'Add a movie', new_list_bookmark_path(@list) %></button>
  <ul>
    <% @list.movies.each do |movie| %>
      <li><%= movie.title %> <%= movie.rating %> <%= movie.overview %></li>
    <% end %>
  </ul>

  <p><%= link_to "Back to list", lists_path %></p>
</div>
